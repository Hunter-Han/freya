<div class="show-county-background">
<div class="background-sussex">
  <br>
  <br>
  <br>
  <br>
  <div class="county-name-and-search">
  <h1><%= @county.name %></h1>
  <%= form_tag county_search_path, method: :get do %>
  <br>
  <div class="search-and-submit-box">
  <%= text_field_tag :query, nil, input_html: {class: "form-control"},
    placeholder: "Find seasonal food!"%>
  <%= submit_tag "Ask Freya", class: "btn btn-primary" %>
  </div>

<% end %>
</div>
