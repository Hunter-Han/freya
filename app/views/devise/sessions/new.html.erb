
<div class="background-image-login">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4 form-login">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: "freya@valhalla.com" %>
        <%= f.input :password, required: false, placeholder: "••••••" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn login-btn" %>
    </div>
    <%= render "devise/shared/links" %>
<% end %>
  </div>
  </div>
</div>
</div>
